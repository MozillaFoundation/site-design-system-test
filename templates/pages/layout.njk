{% extends "base.njk" %}

{% block title %}Layout Test - New Foundation Site Design System{% endblock %}

{% block additional_style %}
<style>
  .cell-inner {
    background: #eee;
  }

  .column-note {
    font-weight: bold;
    text-transform: uppercase;
  }
  .grid-x {
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start; /* Align items to the start */
    align-items: stretch; /* Ensure columns stretch to the same height */
  }
</style>
{% endblock %}

{% block content %}

  {% include "partials/grid-container-underlay.njk" %}

  <nav class="text-center" style="margin: 30px 0">
    <a href="index.html">Back to Index</a>
  </nav>

  <section class="header-section text-center" style="margin: 30px 0">
    <h1 class="header-title">Layout Test</h1>
    <p class="intro-text">
      New Foundation Site Design System Tests using
      <strong>Mozilla Type Family</strong> and
      <strong>Foundation Framework</strong>
    </p>
    <button class="button" id="toggleUnderlayBtn">Toggle Grid Underlay</button>
  </section>

  <!-- Layout Section -->
  <section>

    {% set cells = [ { size: "small-12", note: "12-column wide" } ] %}
    {% include "partials/layout/row.njk" %}

    {% set cells = [ { size: "small-6", note: "6-column wide" } ] %}
    {% include "partials/layout/row.njk" %}

    {% set cells = [ { size: "small-8 small-offset-2", note: "8-column wide, 2-column offset" } ] %}
    {% include "partials/layout/row.njk" %}

    {% set cells = [ { size: "small-6 small-offset-6", note: "6-column wide, 6-column offset" } ] %}
    {% include "partials/layout/row.njk" %}

    {% set cells = [
      { size: "small-4", note: "4-column wide" },
      { size: "small-4", note: "4-column wide" },
      { size: "small-4", note: "4-column wide" }
    ] %}
    {% include "partials/layout/row.njk" %}

    {% set cells = [
      { size: "small-2 small-offset-8", note: "2-column wide, 8-column offset" },
      { size: "small-2", note: "2-column wide" }
    ] %}
    {% include "partials/layout/row.njk" %}

  </section>

  <section class="footer-section">
    <footer class="grid-x grid-margin-x">
      <div class="cell small-12 text-center"></div>
    </footer>
  </section>
{% endblock %}
