    aria-selected="true"
    aria-controls="panel1"
    id="tab1"
    tabindex="0"
    style="border: 1px solid rgb(50, 44, 44);"
  >
    <div class="panel-content" id="panel1">
      <h3 class="figma-label-large" style="z-index: 100;">Video goes here</h3>
      <div class="video-cover">
        {# <iframe
          src="https://www.youtube.com/embed/sN-yrZ1UnEY?si=Poja2Ly8D4Pj3GvP&autoplay=1&mute=1&controls=0&loop=1&playlist=sN-yrZ1UnEY"
          allow="autoplay; fullscreen"
          frameborder="0"
