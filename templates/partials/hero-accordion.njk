        ></iframe> #}
      </div>
    </div>
  </div>

  {% set text_image_panels = [
    { selected: "false", panel_order: "2", img_type: "badge", header: "Panel #2" },
    { selected: "false", panel_order: "3", img_type: "volunteer", header: "Panel #3" }
  ] %}

  {% for text_image_panel in text_image_panels %}
    {% set selected = text_image_panel.selected %}
    {% set panel_order = text_image_panel.panel_order %}
